//C program to replace i'th element of array

#include<stdio.h>
void main()
{
    int i,n,p,q;
    printf("enter the number of elements"); //to enter array size
    scanf("%d",&n);
    int a[n];
    printf("enter the elememnts \n");   //to enter array elements
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);

    }
    printf("enter the posistion to be replaced");//to enter the posistion tpo be replaced
    scanf("%d",&p);             //storing the value to variable p
    printf("enter the number ");    //enter the new number
    scanf("%d",&q);         //storing value to variable q

    a[p]=q;         //inserting the new value to posistion
    printf("new elements");
    for(i=0;i<n;i++)
    {
        printf("%d",a[i]);  //displaying new array
    }
}
