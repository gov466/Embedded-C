/*Write an application to calculate the value of âˆ«sin(ğ‘¥)
using the Trapezoidal Rule with step size of 1 degree. 

#include<iostream>
#include<cmath>
using namespace std;


float f(float x)
{
    return(sin(x));
}
int main()
{
   
    float x0,xn,z,sum,a,b,h,i;
    cout<<"Enter values of x0,xn:\n"<<endl;
    cin>>x0>>xn;
   
    h=1;
    float r=h*(3.14159265/180);
   
    a= 0.5*f(x0);
    b= 0.5*f(xn);
    for(i=1;i<=359;i++)
    {
         z= f(i);
         sum=sum+z;
    }
    float c = r*(a+sum+b);
    cout<<"final ans is: "<<c<<endl;
   

}
