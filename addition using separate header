//main .cpp

#include <iostream>
#include"add.h"     //including separate header file
using namespace std;

int main()
{
    int y;          //declaration
    cout<<"enter the number";
    cin>>y;
    cout <<"y="<<add(y);    //calling function add
}

//header file for add.cpp

#ifndef ADD_H_INCLUDED
#define ADD_H_INCLUDED

int add(int x)  //add function
{
    return x+1;
}

#endif // ADD_H_INCLUDED
